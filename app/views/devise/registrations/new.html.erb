<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Inscription
      <small><%= link_to "Déjà inscrit ?", new_user_session_path, class: "pull-right btn btn-link btn-sm" %></small>
    </h3>
    <hr>
    <%= devise_error_messages! %>
    <!--<div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, :autofocus => true, class: 'form-control input-lg' %>
    </div>-->
    <div class="form-group">
      
      <%= f.email_field :email, :placeholder => "email", class: 'form-control input-lg' %>
    </div>
    <div class="form-group">
      
      <%= f.password_field :password, :placeholder => "mot de passe", class: 'form-control input-lg' %>
    </div>
    <div class="form-group">
     
      <%= f.password_field :password_confirmation, :placeholder => "confirmer mot de passe", class: 'form-control input-lg' %>
    </div>
     <%= f.submit "S'inscrire", :class => 'btn btn-primary btn-block btn-lg' %>
  <% end %>
</div>
