<div class="around_authform">
  <div class="authform">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h3>Connexion
    <%= devise_error_messages! %>
    
      <%- if devise_mapping.registerable? %>
        <small><%= link_to 'Inscription', new_registration_path(resource_name), class: 'btn btn-link btn-sm pull-right'  %></small>
      <% end -%>
      </h3>
      <hr>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to "OubliÃ© ?", new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password, "Mot de passe" %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
      <%= f.submit 'Se connecter', :class => 'button right' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox" style="width:150px">
          <label>
            <%= f.check_box :remember_me %> Se souvenir
          </label>
        </div>
      <% end -%>
  <% end %>
</div>
</div>
